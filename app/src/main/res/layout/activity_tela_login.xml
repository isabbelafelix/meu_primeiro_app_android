<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege"
    android:padding="16dp"
    tools:context=".TelaLoginActivity">

    <EditText
        android:id="@+id/text_email"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_button"
        android:hint="Digite seu e-mail"
        android:textAlignment="center"
        android:textColorHint="@color/marron"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/text_senha"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:layout_margin="100dp"
        android:background="@drawable/color_button"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColorHint="@color/marron"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/color_btn"
        android:layout_margin="28dp"
        android:text="Entrar"
        android:textAllCaps="false"
        android:textColor="@color/bege"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_senha" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_margin="100dp"
        android:gravity="center"
        android:text="Ainda nÃ£o possui conta? Cadastre-se"
        android:textSize="16sp"
        android:textColor="@color/marron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="165dp"
        android:layout_margin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_login" />


</androidx.constraintlayout.widget.ConstraintLayout>