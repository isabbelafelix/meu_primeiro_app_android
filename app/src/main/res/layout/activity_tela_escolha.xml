<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bege"
    tools:context=".TelaEscolhaActivity">

    <Button
        android:id="@+id/buttonAluguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_escolha"
        android:drawableTop="@drawable/ic_para_alugar"
        android:layout_margin="160dp"
        android:padding="25dp"
        android:text="ALUGUEL"
        android:textColor="@color/verde"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_escolha"
        android:drawableTop="@drawable/ic_para_comprar"
        android:padding="25dp"
        android:text="COMPRA"
        android:textColor="@color/verde"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAluguel" />


</androidx.constraintlayout.widget.ConstraintLayout>